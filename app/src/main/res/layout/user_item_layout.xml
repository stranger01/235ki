<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="4dp">

    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/user_profile_image_search"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/profile_icon"/>

        <TextView
            android:id="@+id/user_name_search"
            android:layout_below="@+id/user_profile_image_search"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@android:color/holo_blue_dark"
            android:text="user name"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/user_full_name_search"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/user_name_search"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@android:color/holo_blue_dark"
            android:text="name "
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:layout_height="wrap_content" />

        <Button

            android:id="@+id/follow_search_btn"
            android:layout_width="180dp"
            android:layout_height="66dp"
            android:layout_below="@id/user_full_name_search"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:padding="16dp"
            android:text=" Follow"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </RelativeLayout>

</RelativeLayout>